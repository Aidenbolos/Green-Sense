<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rad.technologies.greensense.ui.activity.LoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOG IN"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@android:color/black" />


        <LinearLayout
            android:id="@+id/llSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSignIn"
            android:layout_marginTop="40dp"
            android:paddingStart="@dimen/padding_start_end_20dp"
            android:paddingEnd="@dimen/padding_start_end_20dp"
            android:gravity="center"
            android:orientation="horizontal"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llSocial"
            android:layout_marginTop="20dp"
            android:paddingStart="@dimen/padding_start_end_20dp"
            android:paddingEnd="@dimen/padding_start_end_20dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round_bg_edittext"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/padding_start_end_20dp"
                android:paddingEnd="@dimen/padding_start_end_20dp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round_bg_edittext"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="@dimen/padding_start_end_20dp"
                android:paddingEnd="@dimen/padding_start_end_20dp"
                android:layout_marginTop="10dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot password?"
                android:gravity="right"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_bg_green"
                android:text="LOG IN"
                android:textColor="@android:color/white" />


            <Button
                android:id="@+id/btnGuest"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_bg_white"
                android:text="Guest"
                android:textColor="@color/green" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Don't have an Account? Sign In"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp" />


        </LinearLayout>

    </RelativeLayout>


</ScrollView>