<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="rad.technologies.greensense.DevicesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/include"
            layout="@layout/toolbar_main" />

        <TextView
            android:id="@+id/tvGreenhouseAutoConfiguration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/std10"
            android:layout_marginEnd="@dimen/std20"
            android:text="@string/greenhouse_devices"
            android:textColor="@android:color/black"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Fan/Shutter Control:"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="Status:" />

        <TextView
            android:id="@+id/tvFan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <Switch
            android:id="@+id/fanSw"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="Turn OFF/ON:" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="Shade:"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView15"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status:" />

        <TextView
            android:id="@+id/tvShade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <Switch
            android:id="@+id/shadeSw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OPEN/CLOSE:"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />
        <TextView
            android:id="@+id/textView17"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pump:"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView18"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status:" />

        <TextView
            android:id="@+id/tvPump"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <Switch
            android:id="@+id/pumpSw"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Turn OFF/ON" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />
        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <Button
            android:id="@+id/btnRef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply" />


    </LinearLayout>
</ScrollView>